<%= render partial: "shared/navbar_home", locals: {
  title: "#{@user.company_name}",
  sub_title: "Bonjour #{current_user.first_name} â€¢ #{@clients.length} clients",
  } %>


<div class="switch-button-container">
  <div class="plus_button">
    <%= link_to '#' do %>
      <i class="fas fa-plus"></i>
    <% end %>
  </div>
  <div class="switch-button">
    <p class="switch-active">Liste</p>
    <p>Carte</p>
  </div>

</div>

<% @clients.work_in_progress.each do |client| %>
  <%= render partial: "shared/client_card", locals: {client: client} %>
<% end %>

<% @clients.work_paused.each do |client| %>
  <%= render partial: "shared/client_card", locals: {client: client} %>
<% end %>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>


