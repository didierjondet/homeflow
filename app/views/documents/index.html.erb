<h1>Mes documents</h1>
<ul>
  <% @documents.each do |document| %>
    <li>
      <%= document.title %>
      <%= document.category %>
      <%= link_to 'voir le document',  document_path(document)  %>
    </li>
  <% end %>
</ul>

<% if current_user.constructor? %>
  <%= link_to 'Creer un document', new_user_document_path(@user)  %>
<% else %>
  <%= link_to 'Creer un document', new_document_path %>
<% end %>


