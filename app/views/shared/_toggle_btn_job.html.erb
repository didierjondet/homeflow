<div class="toggle_button">
  <% if job.completed == false %>
    <%= link_to completed_job_path(job), method: :patch, data: { confirm: 'Êtes vous sûr de vouloir marquer cette étape comme terminée ? Un email sera envoyé à votre client pour le notifier.' } do  %>
      <i class="fas fa-check"></i><span>Terminer</span>
    <% end %>
  <% elsif job.completed == true %>
    <%= link_to not_completed_job_path(job), method: :patch, data: { confirm: 'Vous êtes sur le point de réouvrir cette étape, êtes vous sûr ?' } do  %>
      <i class="fas fa-undo-alt"></i><span>Reprendre</span>
    <% end %>
  <% else %>
    <%= "" %>
  <% end %>
</div>







