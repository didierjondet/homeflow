<%= render partial: "shared/navbar", locals: {
  title: "#{@client.first_name} #{@client.last_name}",
  sub_title: "#{@client.jobs.count} étapes • #{@client.jobs.where(completed: false).count} actives • #{@client.jobs.where(completed: true).count} terminées",
  button: users_path
  } %>


<div class="icon-container">
  <%= link_to user_documents_path(@client) do  %>
    <i class="far fa-file icon"></i>
  <% end %>

  <%= link_to "mailto:#{@client.email}" do  %>
    <i class="far fa-envelope icon"></i>
  <% end %>

  <%= link_to "tel:#{@client.phone_number}" do  %>
    <i class="fas fa-phone icon"></i>
  <% end %>

  <%= link_to user_details_path(@client) do  %>
    <i class="fas fa-ellipsis-h icon"></i>
  <% end %>
</div>


<% @client.jobs.in_progress.order(updated_at: :desc).each do |job| %>
  <%= render partial: "shared/job_card", locals: {job: job} %>
<% end %>

<% @client.jobs.completed.order(updated_at: :desc).each do |job| %>
  <%= render partial: "shared/job_card", locals: {job: job} %>
<% end %>

<% @client.jobs.pending.order(updated_at: :desc).each do |job| %>
  <%= render partial: "shared/job_card", locals: {job: job} %>
<% end %>

