

<ul>
  <% @documents.each do |document| %>
    <%= render partial: "shared/documents_card", locals: {
      title: document.title,
      category: document.category,
      path: document_path(document)
    } %>
  <% end %>
</ul>

<% if current_user.constructor? %>
  <%= link_to 'Creer un document', new_user_document_path(@user)  %>
<% else %>
  <%= link_to 'Creer un document', new_document_path %>
<% end %>




