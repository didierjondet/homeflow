<div class="client-card-container">
  <%= link_to '', user_path(client), class: 'cover-link' %>
  <div class="client-info">
    <h2><%= client.first_name %> <%= client.last_name %></h2>
    <h3>Chantier : <%= client.address_zip %>, <%= client.address_city.upcase %></h3>
    <h4>Dernière tâche le <%= client.updated_at.strftime('%d/%m/%Y') %></h4>
  </div>
  <%= link_to "tel:#{client.phone_number}", class: "icon-call" do %>
    <i class="fas fa-phone icon"></i>
  <% end %>
</div>





